<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/backrgoundVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/thirdBackround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/secondBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonDigitalMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:backgroundTint="#1A000000"
            android:fontFamily="@font/electrolize"
            android:shadowColor="#A6FF00"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:text="visualize money"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonThing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:backgroundTint="#1A000000"
            android:fontFamily="@font/electrolize"
            android:shadowColor="#B914FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:text="visualize dream"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button369"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:backgroundTint="#1A000000"
            android:fontFamily="@font/electrolize"
            android:shadowColor="#FFBF00"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:text="369 energy"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>